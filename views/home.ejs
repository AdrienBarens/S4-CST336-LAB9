<%- include ('templates/header'); -%>

<div class='container'>
	<div class='jumbotron'>
		<h1> POPULAR QUOTES </h1>
		
		<select name="typeRequest" id="typeRequest">
			<option value="keyword">Keyword</option>
			<option value="category">Category</option>
			<option value="name">Author's name</option>
			<option value="gender">Author's gender</option>
		</select>
		
		<form action='/author' method='GET'>
			<div name="infoField" id="infoField" class='form-group row'>
				<label for='firstname' class='col-sm-4 col-form-label'>First Name</label>
				<div class='col-sm-4'>
					<input type='text' class='form-control' id='firstname' name='firstname' placeholder='Jane' required>
				</div>
			</div>
			<div class='form-group row'>
				<div class='col-sm-4'></div>
				<div class='col-sm-4'>
					<button class='btn btn-primary btn-block'>Search Quotes</button>
				</div>
				<div class='col-sm-4'></div>
			</div>
		</form>
	</div>
</div>

<script>
	console.log("Bonsoir");
	$("select").change(function() {
		var selectedVal = $('#typeRequest').find(":selected").text();
		console.log(selectedVal);
		if (selectedVal == "name") {
			$("#infoField").html("");
			$("#infoField").append("<label for='name' class='col-sm-4 col-form-label'>Author's Name</label>" +
				"<div class='col-sm-4'>" + 
					"<input type='text' class='form-control' id='name' name='name' placeholder='Jane' required>" + 
				"</div>");
		} else if (selectedVal == "gender") {
			$("#infoField").html("");
			$("#infoField").append("<label for='gender' class='col-sm-4 col-form-label'>Select gender</label>" + 
				"<div class='col-sm-4'><input class='form-control' type=\"radio\" name=\"gender\" value=\"female\">Female<br>" + 
				"<input class='form-control' type=\"radio\" name=\"gender\" value=\"male\">Male<br></div>");
		} else if (selectedVal == "category") {
			console.log("slt");
		} else {
			$("#infoField").html("");
			$("#infoField").append("<label for='keyword' class='col-sm-4 col-form-label'>Type a keyword</label>" +
				"<div class='col-sm-4'><input class='form-control' type=\"text\" name=\"keyword\"></div>");
		}
	});
</script>

