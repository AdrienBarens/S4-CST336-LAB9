<%- include ('templates/header'); -%>

<div class='container'>
    <div class='jumbotron'>
        <h1 style='text-align:center;'> FOUND AUTHOR </h1>
        <div class='row'>
            <div class='col-sm-4'></div>
            <button class='col-sm-4 btn btn-info btn-block'onclick='location.href="/";'>Search Again</button>
            <div class='col-sm-4'></div>
        </div>
    </div>
    
    <h3>Quotes from <%=name%></h3>
    <ul>
        <% quotes.forEach(q => {%>
				<li><%= q.quote %> <strong><a href="#"  data-toggle="modal" data-target="#<%= q.firstName %><%= q.lastName %>">- <%= q.firstName %> <%= q.lastName %></a></strong> </li>
				<!-- Modal -->
				<div class="modal fade" id="<%= q.firstName %><%= q.lastName %>" tabindex="-1" role="dialog" aria-labelledby="<%= q.firstName %><%= q.lastName %>" aria-hidden="true">
					<div class="modal-dialog" role="document">
						<div class="modal-content">
							<div class="modal-header">
								<h5 class="modal-title" id="<%= q.firstName %><%= q.lastName %>"><%= q.firstName %> <%= q.lastName %></h5>
								<button type="button" class="close" data-dismiss="modal" aria-label="Close">
									<span aria-hidden="true">&times;</span>
								</button>
							</div>
							<div class="modal-body">
								<img class='col-sm-4 portrait-modal' src=<%=q.portrait%> />
								<div class="">Born: <%= q.dob %></div>
								<div class="">Dead: <%= q.dod %></div>
								<div class="">Sex : <%= q.sex %></div>
								<div class="">Profession: <%= q.profession %></div>
								<div class="">Country   : <%= q.country %></div>
								<div class="bio"><%= q.biography %></div>
								<a href="./author/<%=q.authorId%>"><h2>Quotes</h2></a>
							</div>
							<div class="modal-footer">
								<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
							</div>
						</div>
					</div>
				</div>
			<%});%>
    </ul>
</div>

<%- include ('templates/footer'); -%>